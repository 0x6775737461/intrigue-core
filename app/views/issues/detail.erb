<!-- name -->
<div class="col-sm-7">
<h3>
<% if @issue.details && @issue.details["uri"] %>
<% uri = @issue.details["uri"] %>
 <p><a href="<%= h uri  %>"><%= h @issue.details["pretty_name"] || @issue.name %></a><br/></p>
<% else %>
   <%= h @issue.details["pretty_name"] || @issue.name %>
<% end %>
</h3>

<ul>
  <li>Affected Entity: <a href="/<%=@issue.project.name%>/entities/<%=@issue.entity.id%>"><%= @issue.entity.type_string %> <%= @issue.entity.name %></a></li>
  <li>Description: <%= @issue.description %> </li>
  <% if @issue.remediation%> <li>Remediation: <%= @issue.remediation %> </li><% end %>
  <% if @issue.details["references"] && @issue.details["references"].count > 0 %>
  <li>References:</li>
  <ul>
    <% @issue.details["references"].each do |r| %>
      <li><a href=<%=r["uri"]%>><%=r["uri"]%></a> (<%=r["type"]%>)</li>
    <% end %>
  </ul>
<% end %>

  <br>
  
  <li>Generated by: <a href="/<%=@issue.project.name%>/results/<%=@issue.task_result.id%>"><%= @issue.task_result.name %></a> </li>
  <li>Scoped: <%= @issue.scoped %> </li>
  <li>Category: <%= @issue.category %> </li>
  

</ul>
<br/>

<div class="card transparent-card-light">
  <div class="card-title h5">Details</div>
  <div class="card-body">
    <div class="card-body"><pre class="prettyprint"><%= h JSON.pretty_generate @issue.details.to_h %></pre></div>
  </div>
</div>

<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>
